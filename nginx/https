server {
	listen 80;
	listen [::]:80;

	server_name www.example.com;

	client_max_body_size 20m;

	return 302 https://$host$request_uri;
}

server {
	listen 443 ssl;
	listen [::]:443 ssl;

	server_name www.example.com;

	client_max_body_size 20m;

	location / {
	}

	ssl_certificate /etc/nginx/ssl-certificate/www.example.com/combined.pem;
	ssl_certificate_key /etc/nginx/ssl-certificate/www.example.com/private.pem;
}
